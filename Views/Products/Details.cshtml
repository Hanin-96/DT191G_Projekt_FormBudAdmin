@model FormBudAdmin.Models.Product

@{
    ViewData["Title"] = "Details";
    var bids = ViewData["Bids"] as List<FormBudAdmin.Models.Bid>;
}

<h1>Details</h1>

<div>
    <h4>Produkt</h4>
    <hr />
    <div class="product-details">
        <dl class="row product-info">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Worth)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Worth)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MinPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MinPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Condition)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Condition)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TimeLeft)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TimeLeft)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsSold)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsSold)
            </dd>
        </dl>
        <dl class="product-bid">
            @if (bids != null && bids.Count > 0)
            {
                <dt class="col-sm-2">Alla bud</dt>
                @foreach (Bid bid in bids)
                {
                    <dd class="col-sm-10">@bid.Price [@bid.Buyer?.BuyerPhone]</dd>
                }
            }
        </dl>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
